task :pdf do
  articles = File.join(File.dirname(__FILE__), 'content','articles', '*')
  Dir[articles].each do |article|
    puts %Q{prince -o "output/articles/#{name}.pdf" "output/articles/#{name}.html"}
  end
end

SITE.output_dir = "public"